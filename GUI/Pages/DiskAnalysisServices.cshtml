@page "/DiskAnalysisServices"
@inherits Ace.AceGUI.Pages.DiskAnalysisServicesCodeBehind
<h1>AceCommander Disk Analysis Services</h1>

@if (@InitializationResponse == null)
{
  <p><em>Loading (Calling onInitAsync)</em></p>
}
else
{
  <hr />
  <button id="btnReadDisk" type="button" class="btn btn-default" onclick="@(async () => await ReadDisk(0))">Read Disk</button>

  @if (@ReadDiskResponse == null)
  {
    <p>ReadDisk request has not yet been submitted to Ace Commander</p>
  }
  else
  {
    <p>ReadDiskLongRunningTaskID =  @ReadDiskLongRunningTaskID.ToString() </p>

    <p>The state of the ReadDiskLongRunningTask is: @ReadDiskLongRunningTaskState</p>
    <button id="btnGetLongRunningTaskState" type="button" class="btn btn-default" onclick="@(async () => await GetLongRunningTaskState(@ReadDiskLongRunningTaskID))">Read Disk</button>

  }



}

