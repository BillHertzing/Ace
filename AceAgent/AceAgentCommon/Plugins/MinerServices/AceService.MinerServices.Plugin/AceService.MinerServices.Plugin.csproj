<Project Sdk="Microsoft.NET.Sdk">

   <PropertyGroup>
    <TargetFrameworks>net471</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>Ace.AceService.MinerServices.Plugin</RootNamespace>
  </PropertyGroup>
  
  <!-- Common for all TargetFrameworks references, compilation flags and build options -->
  <ItemGroup>
    <PackageReference Include="ServiceStack" Version="5.1.1" />
    <PackageReference Include="Swordfish.NET.CollectionsV3" Version="3.0.0.1" />
  </ItemGroup>
  
  <!-- .NET 4.7 references, compilation flags and build options -->
  <ItemGroup Condition=" '$(TargetFramework)' == 'net47' ">
    <Reference Include="mscorlib" />
    <Reference Include="System" />
    <Reference Include="System.ComponentModel.Composition" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Configuration.Install" />
    <Reference Include="System.Net" />
    <Reference Include="System.Core" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.ServiceModel" />
    <Reference Include="System.ServiceProcess" />
    <Reference Include="System.Transactions" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Security" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AceService.MinerServices.Interfaces\AceService.MinerServices.Interfaces.csproj" />
    <ProjectReference Include="..\AceService.MinerServices.Models\AceService.MinerServices.Models.csproj" />
  </ItemGroup>
  

  <ItemGroup>
    <Reference Include="ATAP.Utilities.CryptoCoin.Enumerations">
      <HintPath>..\..\..\ATAP.Utilities\ATAP.Utilities.CryptoCoin.Enumerations\bin\$(Configuration)\netstandard2.0\ATAP.Utilities.CryptoCoin.Enumerations.dll</HintPath>
    </Reference>
    <Reference Include="ATAP.Utilities.CryptoMiner.Enumerations">
      <HintPath>..\..\..\ATAP.Utilities\ATAP.Utilities.CryptoMiner.Enumerations\bin\$(Configuration)\netstandard2.0\ATAP.Utilities.CryptoMiner.Enumerations.dll</HintPath>
    </Reference>
    <Reference Include="ATAP.Utilities.CryptoMiner.Models">
      <HintPath>..\..\..\ATAP.Utilities\ATAP.Utilities.CryptoMiner.Models\bin\$(Configuration)\netstandard2.0\ATAP.Utilities.CryptoMiner.Models.dll</HintPath>
    </Reference>
  </ItemGroup>
  
  <ItemGroup>
      <None Update="AceService.MinerServices.Plugin.config">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </None>
    </ItemGroup>

</Project>